{
    "startTransition": {
        "to": "list",
        "action": "syslog('Entered Test-Process')"
    },
    "context": {
        "properties": {
            "value": {
                "type": "Integer",
                "defaultValue": "{ 0 }"
            }
        }
    },
    "states": {
        "list": {
            "type": "process.ViewState",
            "transitions": {
                "detail": {
                    "to": "detail",
                    "action": "syslog('Detail')"
                },
                "inc": {
                    "to": "check",
                    "action": "property('value') = property('value') + property('increment')"
                }
            }
        },
        "check": {
            "type": "process.DecisionState",
            "decisions": [
                {
                    "expression": "property('value') >= property('limit')",
                    "transition": {
                        "to": "end",
                        "action" : "syslog('Jumping to End'); property('increment') = property('increment') + 1"
                    }
                }
            ],
            "defaultTransition": {
                "to": "list",
                "discard": true
            }
        },
        "end": {
            "type": "process.ViewState"
        },
        "detail": {
            "type": "process.ViewState",
            "transitions": {
                "cancel": {
                    "to": "list",
                    "discard": true
                },
                "save": {
                    "to": "list",
                    "action": "object('current').num = 1 ; store(object('current'))"
                }
            }
        }
    }
}
