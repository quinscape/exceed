{
    "startTransition": {
        "to": "main",
        "action": "scopedFoo.created = now()"
    },
    "context": {
        "properties": {
            "scopedFoo": {
                "type": "DomainType",
                "typeParam": "Foo",
                "defaultValue": "newObject()"
            }
        }
    },
    "states": {
        "main": {
            "type": "xcd.process.ViewState",
            "transitions": {
                "cancel": {
                    "to": "end",
                    "discard": true
                },
                "update": {
                    "to": "main",
                    "action": "syslog('Current : ', current)"
                },
                "save": {
                    "to": "main",
                    "action": "store(current)"
                },
                "save-scoped": {
                    "to": "main",
                    "action": "store(scopedFoo)"
                }
            }
        },
        "end": {
            "type": "xcd.process.ViewState"
        }
    }
}
