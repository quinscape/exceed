{
    "components": {
        "DataGrid": {
            "vars": {
                "orderBy": "prop('orderBy')",
                "filter": "prop('filter')",
                "offset": "0",
                "limit": "prop('limit')"
            },
            "queries": {
                "result": "query(prop('type').fields(childModelNames())).filter(prop('filter')).orderBy(var('orderBy')).limit(var('limit')).offset(var('offset'))"
            },
            "propTypes": {
                "type": {
                    "client": false,
                    "rule": "queryDefinition()"
                },
                "orderBy": {
                    "client": false,
                    "rule": "fieldListOf(prop('type'))"
                },
                "filter": {
                    "client": false,
                    "rule": "filterExpr(prop('type'))"
                },
                "limit": {
                    "client": false,
                    "rule": "PlainText"
                }
            },
            "contextProvider" : true,
            "childTypes": [
                {
                    "rule": "model('DataGrid.Column')"
                }
            ],
            "modelAware" : true
        },
        "DataGrid.Column": {
            "contextProvider" : true,
            "propTypes": {
                "name": {
                    "rule": "fieldOf(parent.prop('type'))"
                },
                "context" : {
                    "context": "context[props.name]"
                }
            }
        }
    }
}
