{
    "components": {
        "DataGrid": {

            "classes" : [ "element", "iterative-context" ],

            "vars": {
                "orderBy": "prop('orderBy')",
                "filter": "prop('filter')",
                "offset": "0",
                "limit": "prop('limit')"
            },
            "queries": {
                "result": "query( prop('type').fields(childModelNames()) ).filter( prop('filter') ).orderBy( var('orderBy') ).limit( var('limit') ).offset( var('offset'))"
            },
            "propTypes": {
                "type": {
                    "client": false,
                    "type" : "QUERY_EXPRESSION",
                    "rule" : "domainType()"
                },
                "orderBy": {
                    "client": false,
                    "rule": "fieldListOf(query(prop('type')))"
                },
                "filter": {
                    "client": false,
                    "rule": "filterExpr(query(prop('type')))"
                },
                "limit": {
                    "client": false,
                    "type": "INTEGER"
                }
            },
            "propWizards" : {
                "type": {
                    "wizard": "DataGridTypeWizard",
                    "title": "Configure Query",
                    "description": "Open Query join dialog for complex queries"
                }
            },
            "providesContext" : "DataGrid.Row",
            "childRule" : "component('DataGrid.Column')",
            "parentRule" : "!parentHasClass('iterative-context')",
            "modelAware" : true
        },
        "DataGrid.Column": {
            "providesContext" : "DataGrid.Field",
            "propTypes": {
                "name": {
                    "rule": "fieldOf(parent.prop('type'))",
                    "required" : true
                },
                "context" : {
                    "context": "context[props.name]",
                    "contextType" : "DataGrid.Row"
                }
            },
            "templates" : [{
                "wizard" : "DataGridColumnWizard",
                "title" : "configure..."

            }],
            "childRule" : "hasClass('element')"
        }
    }
}
