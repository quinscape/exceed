{
    "components": {
        "View": {
            "classes": ["toplevel"],
            "childRule" : "hasClass('view-child')",
            "propTypes": {
                "title": {
                    "type": "PLAINTEXT",
                    "defaultValue" : "i18n('Untitled')"
                },
                "layout": {
                    "rule": "layout()",
                    "type": "PLAINTEXT"
                }
            }
        },
        "Content": {
            "classes": ["element"]
        },
        "Heading": {
            "classes": ["element"],
            "propTypes": {
                "value": {
                    "type" : "PLAINTEXT"
                },
                "size": {
                    "rule": "range(1,6)"
                }
            }
        },
        "Link": {
            "classes": ["element", "toolbar-child"],
            "propTypes": {
                "location": {
                    "rule": "location()",
                    "required" : true
                },
                "text": {
                    "type": "PLAINTEXT",
                    "required" : true
                }
            },
            "childRule" : "component('Link.Param')"
        },
        "Link.Param": {
            "propTypes": {
                "name": {
                    "type" : "PLAINTEXT",
                    "rule" : "locationParams()",
                    "required" : true
                },
                "value": {
                    "required" : true
                }
            }
        },
        "Footer": {
            "classes": ["top-level", "element"]
        }
    }
}
